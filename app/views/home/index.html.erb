          <div class="col-lg-6">
            <h2><%= gallery.title %></h2>
            <p><%= gallery.content %></p>
          </div>
          <div class="col-lg-6">
            <figure>
            <iframe width="560" height="315" src="<%= gallery.url %>" frameborder="0" allowfullscreen></iframe>
          </figure>
          </div>
          <% end %>
        </div><!-- TESTIMONIALS END -->
        </div>
      </div>
    </div>
  <div class="info_service" id="Blog">
    <div class="container">
      <div class="row sub_content">
        <div class="col-lg-12">
          <div class="dividerHeading">
            <h4><span>Blog</span></h4>
          </div>
          <section class="content blog">
            <div class="container">
              <div class="row">
                <div class="col-xs-12">
                  <div class="blog_medium">
                    <% for blog in @blogs %>
                        <article class="post">
                          <div class="post_date">

                            <span class="day"><%= blog.created_at.strftime("%d") %></span>
                            <span class="month"><%= blog.created_at.strftime("%b") %></span>

                          </div>

                          <figure class="post_img">
                            <a href="#">
                              <%= image_tag blog.image_url(:thumb) if blog.image? %>
                            </a>
                          </figure>
                          <div class="post_content">
                            <div class="post_meta">
                              <h2>
                                <%= blog.title %>
                              </h2>
                              <div class="metaInfo">
                                <span><i class="fa"></i> Time :<%= blog.created_at.strftime("%H:%M") %> </span>
                                <span><i class="fa"></i> Year :<%= blog.created_at.strftime("%Y") %></span>
                              </div>
                            </div>
                            <p><%= blog.short_contents %></p>
                            <div class="text-center"><a class="btn btn-small btn-default" href="blogs">Read More</a></div>

                          </div>

                        </article>

                    <% end %>
                  </div>

                </div>
              </div>
            </div> <!--/.container-->
          </section>
          </div>
        </div>
      </div>
</div>
