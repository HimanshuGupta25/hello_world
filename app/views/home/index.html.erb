<div class="info_service" id="Research">
  <div class="container">
    <div class="row sub_content">
      <div class="col-md-12">
        <div class="dividerHeading">
          <h4><span>Research</span></h4>
        </div>
      </div>
          <div class="rs_box">
            <% for research in @researches %>
            <div class="col-md-3 col-sm-6">
              <div class="serviceBox_1">
                <div class="icon_service">
                  <i class="fa fa-home"></i>

                  <h3><%= research.name %></h3>
                </div>
                <div class="fr_content">
                  <p>
                    <%= research.contents %>
                  </p>

                  <a class="read" href="#" data-toggle="modal" data-target="#myBtn_<%= research.id %>">Read more</a>
                  <div class="modal fade" id="myBtn_<%= research.id %>" role="dialog">
                    <div class="modal-dialog">

                      <!-- Modal content-->
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title"><%= research.name %></h4>
                        </div>
                        <div class="modal-body">
                          <p><%= research.contents %><%= research.main_contents %></p>
                        </div>

                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                      </div>

                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>

    </div>
  </div>
</div>
